    <script>
        function toggleFoodDetails(mealType) {
            let details = document.getElementById(mealType + "-details");
            details.style.display = details.style.display === "none" ? "block" : "none";
        }
        
        function openModal() {
            document.getElementById("foodModal").style.display = "block";
        }
        
        function closeModal() {
            document.getElementById("foodModal").style.display = "none";
        }
        
        function addFood() {
            let mealType = document.getElementById("mealType").value;
            let foodName = document.getElementById("foodName").value;
            let foodCalories = parseInt(document.getElementById("foodCalories").value);
            
            if (foodName && foodCalories) {
                let details = document.getElementById(mealType + "-details");
                let newFoodItem = document.createElement("div");
                newFoodItem.textContent = `${foodName} - ${foodCalories} kcal`;
                details.appendChild(newFoodItem);
                details.style.display = "block";
                
                updateCalories(foodCalories);
                closeModal();
            }
        }
        
        function updateCalories(calories) {
            let currentCalories = parseInt(document.querySelector('strong').textContent);
            let newCalories = currentCalories + calories;
            document.querySelector('strong').textContent = newCalories;
            let progressBar = document.querySelector('.progress-bar');
            let progress = (newCalories / 2000) * 100;
            progressBar.style.width = progress + '%';
        }
    </script>
